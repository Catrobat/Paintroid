<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/pocketpaint_welcome_margin_side"
    android:paddingStart="@dimen/pocketpaint_welcome_margin_side"
    android:paddingTop="@dimen/pocketpaint_welcome_margin_top">

    <TextView
        android:id="@+id/pocketpaint_intro_started_head"
        style="@style/PocketPaintWelcomeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:text="@string/enjoy_pocket_paint"/>

    <TextView
        android:id="@+id/pocketpaint_intro_started_text"
        style="@style/PocketPaintWelcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pocketpaint_intro_started_head"
        android:layout_marginTop="@dimen/pocketpaint_welcome_margin_top_text"
        android:text="@string/intro_get_started"/>

    <ImageView
        android:layout_below="@id/pocketpaint_intro_started_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pocketpaint_intro_portrait"
        android:layout_alignParentBottom="true"
        android:id="@+id/pocketpaint_image_getstarded"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/pocketpaint_intro" />
</RelativeLayout>
