<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_screen1"
                android:paddingStart="@dimen/intro_margin_side"
                android:paddingEnd="@dimen/intro_margin_side"
                android:paddingTop="@dimen/intro_margin_top">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/intro_welcome_head"
            style="@style/IntroHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:text="@string/welcome_to_pocket_paint"/>


        <TextView
            android:id="@+id/intro_welcome_text"
            style="@style/IntroText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_welcome_head"
            android:layout_marginTop="@dimen/intro_margin_top_text"
            android:text="@string/intro_welcome_text"/>

    </RelativeLayout>



</RelativeLayout>