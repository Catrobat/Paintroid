<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_chooser_base_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/pocketpaint_colorAccent"
                android:text="@string/color_chooser_title"/>

            <org.catrobat.paintroid.dialog.colorpicker.ColorPickerView
                android:id="@+id/color_chooser_color_picker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/color_chooser_button_cancel"
                    style="?android:borderlessButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    tools:background="@android:color/darker_gray"
                    android:text="@string/color_picker_cancel"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/color_chooser_button_ok"
                    style="?android:borderlessButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    tools:background="@android:color/darker_gray"
                    android:text="@string/color_picker_apply"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


