<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_flip_tool_buttons"
              android:layout_width="match_parent"
              android:minHeight="50dp"
              android:layout_marginBottom="10dp"
              android:orientation="horizontal"
              android:layout_height="50dp">

    <ImageButton
        android:id="@+id/flip_horizontal_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/icon_menu_flip_horizontal"
        android:background="@color/transparent"/>

    <ImageButton
        android:id="@+id/flip_vertical_btn"
        android:layout_width="@dimen/bottom_bar_button_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/icon_menu_flip_vertical"
        android:background="@color/transparent"/>

</LinearLayout>
