<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/color_chooser_color_rgb_textview_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/color_red"
            android:textColor="@color/pocketpaint_color_chooser_rgb_red" />

        <SeekBar
            android:id="@+id/color_chooser_color_rgb_seekbar_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:max="255" />

        <TextView
            android:id="@+id/color_chooser_rgb_red_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/pocketpaint_colorAccent"
            tools:text="255" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/color_chooser_color_rgb_textview_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/color_green"
            android:textColor="@color/pocketpaint_color_chooser_rgb_green" />

        <SeekBar
            android:id="@+id/color_chooser_color_rgb_seekbar_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="255" />

        <TextView
            android:id="@+id/color_chooser_rgb_green_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/pocketpaint_colorAccent"
            tools:text="255" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/color_chooser_color_rgb_textview_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/color_blue"
            android:textColor="@color/pocketpaint_color_chooser_rgb_blue" />

        <SeekBar
            android:id="@+id/color_chooser_color_rgb_seekbar_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="255" />

        <TextView
            android:id="@+id/color_chooser_rgb_blue_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/pocketpaint_colorAccent"
            tools:text="255"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/color_chooser_color_rgb_textview_alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/color_alpha"
            android:textColor="@color/pocketpaint_color_chooser_rgb_alpha" />

        <SeekBar
            android:id="@+id/color_chooser_color_rgb_seekbar_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="255" />

        <TextView
            android:id="@+id/color_chooser_rgb_alpha_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/pocketpaint_colorAccent"
            tools:text="100%" />
    </TableRow>
</TableLayout>
