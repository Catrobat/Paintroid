<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/pocketpaint_percentage_save_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="2dp"
        android:text="@string/dialog_save_jpg_option_quality"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pocketpaint_percentage_save_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pocketpaint_percentage_save_info_label"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/pocketpaint_jpg_seekbar_save_info"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pocketpaint_percentage_save_info_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progressTint="?attr/colorAccent"
        android:thumbTint="?attr/colorAccent" />

</RelativeLayout>