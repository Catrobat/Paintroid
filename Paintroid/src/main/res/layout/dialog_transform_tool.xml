<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_transform_tool_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/transform_tool_auto_crop_text"
        android:textAllCaps="true"
        android:textColor="@color/dialog_title_color"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dip" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:background="@color/dialog_subtitle_border"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dip" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/transform_auto_crop_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_menu_resize_adjust"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:elevation="1dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/transform_tool_sub_header_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/transform_tool_roate_text"
        android:textAllCaps="true"
        android:textColor="@color/dialog_title_color"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dip" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:background="@color/dialog_subtitle_border"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dip" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/transform_rotate_right_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_menu_rotate_right"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:elevation="1dp" />

        <ImageButton
            android:id="@+id/transform_rotate_left_btn"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_menu_rotate_left"
            android:background="@color/transparent"/>

</LinearLayout>

    <TextView
        android:id="@+id/transform_tool_sub_header_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:text="@string/transform_tool_mirror_text"
        android:textAllCaps="true"
        android:textColor="@color/dialog_title_color"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dip" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:background="@color/dialog_subtitle_border"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/transform_flip_horizontal_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu_flip_horizontal"
                android:background="@color/transparent"
                android:layout_gravity="center"
                android:elevation="1dp" />

            <ImageButton
                android:id="@+id/transform_flip_vertical_btn"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu_flip_vertical"
                android:background="@color/transparent"/>
            </LinearLayout>
</LinearLayout>