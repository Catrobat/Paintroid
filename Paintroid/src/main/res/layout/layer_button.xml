    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layer_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="left"
        android:background="@drawable/attribute_button_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/layer_button_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/layer_button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.80"
            android:textColor="@color/tools_text_color"
            android:textSize="16sp" />

            <ImageView
                android:id="@+id/layer_image_visible"
                android:visibility="invisible"
                android:layout_width="32dp"
                android:layout_weight="0.10"
                android:src="@drawable/icon_layer_eye"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/layer_opacity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:textColor="@color/tools_text_color"
                android:textSize="16sp"/>

        <ImageView
            android:id="@+id/layer_image_locked"
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_weight="0.10"
            android:src="@drawable/icon_layer_lock"
            android:layout_height="32dp" />

</LinearLayout>
