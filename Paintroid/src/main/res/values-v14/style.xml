        <item name="android:selectableItemBackground">@color/custom_background_color</item>
<!--         <item name="android:popupMenuStyle">@style/PaintroidPoupupMenuStyle</item> -->
        <!-- item name="android:dropDownListViewStyle">@style/PaintroidDropDownListView</item -->
        <!-- item name="android:actionDropDownStyle">@style/PaintroidDropDownNav</item -->
        <item name="actionOverflowButtonStyle">@style/PaintroidOverflowButton</item>
        <item name="android:actionOverflowButtonStyle">@style/PaintroidOverflowButton</item>
        <item name="android:actionBarStyle">@style/PaintroidActionBarBottomStyle</item>
        <item name="actionBarSize">50dip</item>
        <item name="android:actionBarSize">50dip</item>
    </style>
	
</resources>
