<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--  Active tab -->
	    <item android:state_selected="true" android:state_focused="false"
	        android:state_pressed="false" android:drawable="@drawable/tab_background_active_selector" />
	    <!--  Inactive tab -->
	    <item android:state_selected="false" android:state_focused="false"
	        android:state_pressed="false" android:drawable="@drawable/tab_background_inactive_selector" />
	    <!--  Pressed tab -->
	    <item android:state_pressed="true" android:drawable="@drawable/tab_background_inactive_selector" />
	    <!--  Selected tab (using d-pad) -->
	    <item android:state_focused="true" android:state_selected="true"
	        android:state_pressed="false" android:drawable="@drawable/tab_background_inactive_selector" />

</selector>