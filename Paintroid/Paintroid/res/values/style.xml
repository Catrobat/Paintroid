<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="CustomPaintroidDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/CenteredWindowTitle</item>
        <item name="android:textSize">16sp</item>
    	<item name="android:linksClickable">true</item>
	</style>       
	
	<style name="CenteredWindowTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
	    <item name="android:gravity">center_horizontal</item>    
	</style>
	
	<style name="ToolButton">
	    <item name="android:textColor">@color/tools_text_color</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:background">@color/custom_background_color</item>
	</style>
	
    <style name="Theme.Transparent" parent="android:Theme">
      <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowBackground">@android:color/transparent</item>
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:windowIsFloating">true</item>
      <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="PaintroidActionBarBottomStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:backgroundSplit">#B2253239</item>
    </style>	
       <style name="Theme.PaintroidSplitActionBar" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PaintroidActionBarBottomStyle</item>
        <item name="android:actionBarSplitStyle">@style/PaintroidActionBarTopSplitStyle</item>
    </style>
    <style name="PaintroidActionBarBottomStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">#B2253239</item>
    </style>   
    <style name="PaintroidActionBarTopSplitStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:backgroundSplit">#B2253239</item>
    </style>
</resources>
