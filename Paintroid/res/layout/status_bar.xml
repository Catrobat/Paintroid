<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_alignParentBottom="true"
  android:layout_width="fill_parent" 
  android:id="@+id/StatusbarLayout"
  android:layout_marginTop="2dp"
  android:layout_marginBottom="2dp"
  android:layout_height="wrap_content"
 android:weightSum="4"
  xmlns:app="http://schemas.android.com/apk/res/org.catrobat.paintroid">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

 <ImageButton
    android:id="@+id/btn_status_undo" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="50dip"
    android:minHeight="50dip"
    android:layout_marginLeft="24dip"
    android:src="@drawable/icon_menu_undo_disabled"
    android:background="@color/transparent">
  </ImageButton>
  </LinearLayout>
  
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" >

   <ImageButton
    android:id="@+id/btn_status_redo"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="50dip"
    android:minHeight="50dip"
    android:layout_marginLeft="24dip"
    android:src="@drawable/icon_menu_redo_disabled"
    android:background="@color/transparent"

    android:layout_toRightOf="@id/btn_status_undo">
  </ImageButton>
  </LinearLayout>
  
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1" >

     <org.catrobat.paintroid.ui.button.ToolbarButton
    android:id="@+id/btn_status_parameter" 
    android:layout_width="wrap_content" 
    android:minWidth="24dip"
    android:minHeight="24dip"
    android:layout_marginBottom="5dip"
    android:layout_marginTop="9dip"
    android:layout_marginLeft="24dip"
    android:src="@color/color_stroke_background"
    android:background="@color/color_stroke_background"
    android:layout_toRightOf="@id/btn_status_redo"
    android:layout_height="wrap_content">
  </org.catrobat.paintroid.ui.button.ToolbarButton>
  </LinearLayout>
  
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1" >

      <ImageButton
    android:id="@+id/btn_status_tool"  
    android:layout_width="wrap_content" 
    android:minWidth="50dip"
    android:minHeight="50dip"
    android:layout_marginLeft="24dip"
    android:src="@drawable/icon_menu_brush"
    android:background="@color/transparent"
    android:layout_toRightOf="@id/btn_status_parameter"
    android:layout_height="wrap_content">
  </ImageButton>
</LinearLayout>
</LinearLayout>