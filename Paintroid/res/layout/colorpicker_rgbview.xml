<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:gravity="center|top">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:gravity="center">
			<ImageView android:layout_width="64dip"
				android:layout_height="fill_parent"
				android:scaleType="fitXY"
				android:layout_marginTop="10dip"
				android:id="@+id/color_rgb_imgpreview"
				android:background="@drawable/checkeredbg_repeat"
				android:layout_marginRight="10dip">
			</ImageView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" android:layout_weight="1">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:orientation="vertical"
				android:gravity="center">
				<TextView android:layout_width="wrap_content"
					android:gravity="top"
					android:layout_height="wrap_content"
					android:textColor="#FF0000"
					android:textStyle="bold" 
					android:id="@+id/color_rgb_tvRed"
					android:text="@string/color_red" />
				<SeekBar android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:minWidth="150dip"
					android:gravity="bottom"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:max="255" android:id="@+id/color_rgb_seekRed" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="top"
					android:textColor="#00FF00"
					android:textStyle="bold"
					android:id="@+id/color_rgb_tvGreen"
					android:text="@string/color_green" />
				<SeekBar android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:minWidth="150dip"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:max="255"
					android:id="@+id/color_rgb_seekGreen"
					android:gravity="bottom"/>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="top"
					android:textColor="#0000FF"
					android:textStyle="bold"
					android:id="@+id/color_rgb_tvBlue"
					android:text="@string/color_blue" />
				<SeekBar android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:minWidth="150dip"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:max="255"
					android:id="@+id/color_rgb_seekBlue"
					android:gravity="bottom"/>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="top"
					android:textStyle="bold"
					android:id="@+id/color_rgb_tvAlpha"
					android:text="@string/color_alpha" />
				<SeekBar android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:minWidth="150dip"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:max="255"
					android:id="@+id/color_rgb_seekAlpha"
					android:gravity="bottom"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
