<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="16dp" >
    
	  <org.catrobat.paintroid.dialog.colorpicker.ColorPickerView
	    android:id="@+id/view_colorpicker"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
  
   <LinearLayout android:id="@+id/layout_colorbuttons"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:showDividers="none"    
      android:orientation="vertical">

       <org.catrobat.paintroid.dialog.colorpicker.CheckeredTransparentLinearLayout
           android:id="@+id/colorchooser_ok_button_base_layout"
           android:layout_width="fill_parent"
           android:layout_height="48dp"
           android:layout_marginTop="16dp"
           android:background="@android:color/black">
	        <Button
	            android:id="@+id/btn_colorchooser_ok"
	            android:layout_width="fill_parent"
	            android:text="@string/done"
	            android:textSize="14sp"
	            android:layout_height="48dp"
	            android:textColor="@color/color_chooser_white"
	            android:gravity="center"
	            android:background="@android:color/transparent"/>
         </org.catrobat.paintroid.dialog.colorpicker.CheckeredTransparentLinearLayout>    
    </LinearLayout>
    
</LinearLayout>

