<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:layout_margin="16dp">
    
	  <org.catrobat.paintroid.dialog.colorpicker.ColorPickerView
	    android:id="@+id/view_colorpicker"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
  
	  
	  
   <LinearLayout android:id="@+id/layout_colorbuttons"
      android:background="@drawable/tools_menu_background"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center|center_vertical|center_horizontal"
      android:showDividers="none"    
      android:orientation="vertical">      
	
       <View android:layout_width="fill_parent"
           android:layout_height="16dp"
           android:visibility="invisible"/>
       
       <LinearLayout 
           android:id="@+id/colorchooser_ok_button_base_layout"
           android:layout_width="fill_parent"
           android:layout_height="48dp"
           android:background="@drawable/checkeredbg_repeat">
	        <Button
	            android:id="@+id/btn_colorchooser_ok"
	            android:layout_width="fill_parent"
	            android:text="@string/ok"
	            android:textSize="14sp"
	            android:layout_height="48dp"
	            android:textColor="#FFFFFF"
	            android:gravity="center"/>
         </LinearLayout>
    
    </LinearLayout>
    
</LinearLayout>

